datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Marriage {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  girlName      String
  girlDob       String
  manName       String
  manDob        String
  firstDowry    String?
  lastDowry     String?
  notes         String?
  firstWitness  String
  secondWitness String
  date          String
  userId        String  
}


model Divorce {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  girlName      String
  girlDob       String
  girlRN       String
  manName       String
  manDob        String
  manRN        String
  notes         String?
  firstWitness  String
  firstWitnessRN  String
  secondWitness String
  secondWitnessRN String
  date          String
  userId        String  
}
